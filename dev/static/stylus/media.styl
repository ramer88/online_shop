@media screen and (max-width: 1107px)
	.menu-top__left-side
		margin-right 80px
		margin-bottom 20px
		
	.menu-top__right-side
		align-items flex-start
		
		
@media screen and (max-width: 710px)
	.menu-top
		justify-content flex-start
		padding 16px 30px
		margin-right 0px
		
@media screen and (max-width: 1326px)
	.menu-bottom-left-navigation
		margin-right 20px
		
@media screen and (max-width: 1210px)
	.menu-bottom-left-navigation
		margin-right 20px
		flex-wrap wrap
		
	.logo
		margin-right 32px
		margin-bottom 32px
		
@media screen and (max-width: 1208px)
	.menu-bottom-left-navigation
		margin-right 20px
		
	.searh-form,
	.sale,
	.cart
		margin-right 10px
		
@media screen and (max-width: 1090px)
	.menu-bottom-right-searh
		flex-wrap wrap
		justify-content flex-start
		
	.searh-form
		margin-right 120px
		margin-bottom 20px
		
	.sale,
	.cart
		margin-right 27px
			
@media screen and (max-width: 934px)
	.menu-bottom
		justify-content center
		//padding 16px 20px
	.searh-form
		margin-right 0
		
@media screen and (max-width: 607px)
	.menu-bottom
		justify-content flex-start
		align-items flex-start
		padding-left 30px

	ul.navigation-menu
		display none
		
	.logo
		margin-right 32px
		margin-bottom 32px
		
@media screen and (max-width: 432px)
	.menu-bottom
		flex-direction column
			
	.searh-form
		margin-right 200px
		
	.menu-bottom-right-searh
		align-items center
		
@media screen and (max-width: 425px)
	.menu-top__left-side
		flex-wrap wrap
		
	ul.languages
		margin-bottom 10px

	ul.side-bar
		flex-wrap wrap
		
	ul.side-bar>li
		justify-content flex-start
		margin-bottom 10px

	ul.side-bar
		justify-content flex-start
