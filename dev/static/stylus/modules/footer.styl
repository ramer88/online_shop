section.footer
	width 100%
	max-width 1400px
	margin 0 auto
	
.footer-top
	padding 21px 0 20px
	background-color footerTopColor
	color #fff
	text-transform uppercase
	
	& a
		height 65px
		display inline-block
		vertical-align middle
		color #fff
		text-transform uppercase

.footer-top-container,
.footer-middle-container,
.footer-middle-container
	width 1024px
	margin 0 auto
	
.footer-top-left
	margin-right 67px
	display inline-block
	
.footer-top-right
	display inline-block
	
.truck-description,
.phone-description
	height 65px
	display inline-block
	vertical-align middle

.truck,
.phone
	position relative
	display inline-block
	size(65px)
	background-color #fff
	margin-right 21px

.icon-top-footer
	absolute-center()
	fill footerTopColor
	
.icon-truck
	size(35px,28px)
	
.icon-phone
	size(28px)
	

/*footer middle*/

.footer-middle
	background-color footerMiddleColor
	color #fff
	font-size rem(10px)
	padding-bottom 56px
	
.facebook,
.twitter,
.information,
.contacts
	display inline-block
	vertical-align top
	margin-top 49px
	
.facebook-title,
.twitter-title,
.information-title,
.contacts-title
	margin-bottom 26px
	text-transform uppercase
	font-size rem(18px)
	
/*facebook block*/

.facebook
	width 232px
	margin-right 50px
	
ul.facebook-list>li:nth-child(2)
	margin-bottom 6px
	
.mini-photo-gallary
	position relative

.mini-photo-gallary-box
	size(241px,107px)
	margin-bottom 20px
	
	& li
		display inline-block
		size(50px,49px)
		margin-right 11px
		
	& a
		display block
		cursor pointer
		size(50px,49px)
		
.mini-photo-gallary-box>li:nth-child(4n+4)
	margin-right 0px
	
.mini-photo-gallary-box>li:nth-child(-n+4)
	margin-bottom 11px

.mini-photo-gallary:before
	content ''
	display block
	width 240px
	border 1px solid TopMenuColor
	position absolute
	top -8px
	
.mini-photo-gallary:after
	content ''
	display block
	width 240px
	border 1px solid TopMenuColor
	position absolute
	bottom -11px
	
.mini-photo-gallary-box>li:nth-child(1)
		background url('../img/content/photo-1.jpg')
		
.mini-photo-gallary-box>li:nth-child(2)
		background url('../img/content/photo-2.jpg')
		
.mini-photo-gallary-box>li:nth-child(3)
		background url('../img/content/photo-3.jpg')
		
.mini-photo-gallary-box>li:nth-child(4)
		background url('../img/content/photo-4.jpg')

.mini-photo-gallary-box>li:nth-child(5)
		background url('../img/content/photo-5.jpg')
		
.mini-photo-gallary-box>li:nth-child(6)
		background url('../img/content/photo-6.jpg')
		
.mini-photo-gallary-box>li:nth-child(7)
		background url('../img/content/photo-7.jpg')
		
.mini-photo-gallary-box>li:nth-child(8)
		background url('../img/content/photo-8.jpg')

/*twitter block*/

.twitter
	width 224px
	margin-right 73px
	
.icon-box-middle-footer
	display inline-block
	vertical-align top
	margin-right 12px
	margin-bottom 27px
	
.twitter-description
	display inline-block
	width 166px
	
/*information block*/

.information
	width 185px
	margin-right 60px
	
.icon-box-information
	margin-right 10px
	display inline-block
	vertical-align bottom
	margin-bottom 15px

.information-description
	width 165px
	display inline-block
	vertical-align top

/*information block*/

.contacts
	width 192px

ul.contacts-list>li
	margin-bottom 15px
	
ul.contacts-list a
	color #fff

ul.contacts-list>li:nth-child(6)
		margin-bottom 34px
		
ul.icon-box-social
	position relative
	
ul.icon-box-social:before
	content ''
	display block
	width 197px
	border 1px solid TopMenuColor
	position absolute
	top -8px
	
ul.icon-box-social
	margin-top 18px
	
/*footer-bottom block*/

.footer-bottom
	padding 25px 0 32px
	background-color footerBottomColor
	color footerBottomTextColor
	font-family mainFont
	font-size rem(12px)
	
	& a
		color footerBottomTextColor
		font-family mainFont
		font-size rem(12px)
		
.footer-bottom-left
	float left

.footer-bottom-right
	float right

ul.footer-bottom-right-menu>li
	display inline-block
	padding 0 15px
	border-right 1px solid footerBottomTextColor

ul.footer-bottom-right-menu li:first-child
	padding-left 0px

ul.footer-bottom-right-menu li:last-child
	padding-right 0
	border-right 0